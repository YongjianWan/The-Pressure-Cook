# Auto detect text files and perform LF normalization
* text=auto

# Source code - use LF for cross-platform compatibility
*.py text eol=lf
*.ino text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.c text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf

# Windows specific - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - no conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.docx binary
*.mp3 binary
*.mp4 binary
*.m4a binary
*.wav binary
*.zip binary
*.7z binary
*.hex binary
*.elf binary
